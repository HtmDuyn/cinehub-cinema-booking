      "name": "MOVIES",
      "item": [
        {
          "name": "1. Get All Movies",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Response is an array\", function () {",
                  "    pm.expect(pm.response.json()).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/movies",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "movies"
              ]
            },
            "description": "Get all available movies\n\n**Guest Feature** ✅ No authentication required"
          },
          "response": []
        },
        {
          "name": "2. Get Movie by ID",
          "event": [
