              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Response contains movie details\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('title');",
                  "    pm.expect(jsonData).to.have.property('description');",
                  "    pm.expect(jsonData).to.have.property('genre');",
                  "    pm.expect(jsonData).to.have.property('duration');",
                  "    pm.expect(jsonData).to.have.property('trailerUrl');",
                  "    pm.expect(jsonData).to.have.property('rating');",
                  "});"
                ]
              }
            }
          ],
